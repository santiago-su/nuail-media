<div class="mdl-grid">
  <div class="mdl-layout-spacer"></div>
  <div class="mdl-cell mdl-cell--4-col">
    <%= form_for video, html: {id: 'video_form'} do |f| %>

    <% if @video.errors.any? %>
      <div id="error_explanation" class='bg-danger'>
        <h2>Hay <%= pluralize(@video.errors.count, "error") %> en la forma:</h2>
        <ul>
        <% @video.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :name, class: "mdl-textfield__input", type: 'text' %>
        <%= f.label :name, "Nombre", class: 'mdl-textfield__label' %>
      </div>
    </div>

    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_area :description, class: "mdl-textfield__input", type: 'text' %>
        <%= f.label :description, "DescripciÃ³n", class: 'mdl-textfield__label' %>
      </div>
    </div>

    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :embed_url, class: "mdl-textfield__input", type: 'text' %>
        <%= f.label :embed_url, "Url", class: 'mdl-textfield__label' %>
      </div>
    </div>

    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :participants, class: "mdl-textfield__input", type: 'text' %>
        <%= f.label :participants, "Participantes", class: 'mdl-textfield__label' %>
      </div>
    </div>

    <div class="mdl-cell mdl-cell--12-col">
      <span class="mdl-list__item-secondary-action">
       <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="video_featured">
         Featured
         <%= f.check_box :featured, class: 'mdl-checkbox__input' %>
       </label>
     </span>
   </div>

    <div class="mdl-cell mdl-cell--12-col">
      <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
        Guardar
      </button>
    </div>

    <% end %>

  </div>
  <div class="mdl-layout-spacer"></div>
</div>
