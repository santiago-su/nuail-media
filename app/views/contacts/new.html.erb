<div class="mdl-grid mdl-grid--no-spacing">
  <div class="mdl-cell mdl-cell--6-col">
    <img src="http://fillmurray.com/480/480" class="full-width"></img>
  </div>
  <div class="mdl-cell mdl-cell--6-col contact-form">
    <h1>Contáctanos!</h1>
    <%= form_for @contact, html: {id: 'photo_form'} do |f| %>

    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :name, class: "mdl-textfield__input", type: 'text' %>
        <%= f.label :name, "Nombre", class: 'mdl-textfield__label' %>
      </div>
    </div>

    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :email, class: "mdl-textfield__input", type: 'text' %>
        <%= f.label :email, "Correo", class: 'mdl-textfield__label' %>
      </div>
    </div>

    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.number_field :phone, class: "mdl-textfield__input", type: 'text' %>
        <%= f.label :phone, "Teléfono", class: 'mdl-textfield__label' %>
      </div>
    </div>

    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_area :message, class: "mdl-textfield__input", type: 'text' %>
        <%= f.label :message, "Mensaje", class: 'mdl-textfield__label' %>
      </div>
    </div>


    <div class="mdl-cell mdl-cell--12-col">
      <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
        Enviar
      </button>
    </div>

    <% end %>

  </div>
</div>
